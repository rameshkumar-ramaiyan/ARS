@model USDA_ARS.Umbraco.Extensions.Models.EmailSignup
@{

}
<table width="60%" cellpadding="0" cellspacing="0" align="CENTER">
    <tbody>
        <tr>
            <td>
                @using (Html.BeginUmbracoForm<USDA_ARS.Umbraco.Controllers.SubscribeFormSurfaceController>("HandleFormSubmit"))
                {
                    <p>
                        @Html.ValidationMessageFor(p => p.ListName)
                        <br />
                        @Html.RadioButton("ListName", "foodnutrition")
                        <b>Full text:</b> The complete text of each new issue<br /><br />
                        @Html.RadioButton("ListName", "fnrb-webalert")
                        <b>Web link:</b> Just a link to each new issue we post to our web site
                    </p>
                    <p>
                        Please enter your e-mail address:<br />
                        @Html.ValidationMessageFor(p => p.Email)
                        <br />
                        @Html.TextBoxFor(p => p.Email, new { @placeholder = "Sign up for Food and Nutrition Research Briefs", @style = "width: 285px" })
                        <br /><br />
                        @Html.RadioButton("Action", "Subscribe", new { @checked = "checked" })
                        Subscribe
                        <br />
                        @Html.RadioButton("Action", "Unsubscribe")
                        Unsubscribe<br /><br />
                    </p>
                    <p>
                        @Html.HiddenFor(p => p.UmbracoId)
                        <input type="submit" value="Submit">
                    </p>
                }
            </td>
        </tr>
    </tbody>
</table>

